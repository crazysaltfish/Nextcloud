<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rorsch.pohto.MainActivity">

    <ImageView
        android:id="@+id/photo2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="36dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/takePic2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开相机"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/photo2"
        android:layout_alignStart="@+id/takeGallery2" />
    <Button
        android:id="@+id/takeGallery2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开相册"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/takePic2"
        android:layout_alignStart="@+id/next2" />

    <Button
        android:id="@+id/next2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下一页"
        android:layout_below="@+id/takeGallery2"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

